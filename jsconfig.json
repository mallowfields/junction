{
  "compilerOptions": {
    "noImplicitAny": false,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "forceConsistentCasingInFileNames": false
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ]
}